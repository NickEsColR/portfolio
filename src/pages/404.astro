---
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";

const { currentLocale = "en" } = Astro;
---

<Layout title="404 - Page Not Found" lang={currentLocale} isNotFound>
  <main class="flex h-screen items-center justify-center px-4 sm:px-6 lg:px-8">
    <div
      class="flex w-fit flex-col items-center justify-center space-y-8 text-center"
    >
      <h1 class="mt-6 text-xl font-extrabold sm:text-4xl">
        404 - Page Not Found
      </h1>
      <p class="mt-2 max-w-xs text-pretty text-sm sm:max-w-md">
        Oops! It seems you've ventured into uncharted territory.
      </p>
      <div
        class="mt-4 max-w-xs rounded-lg bg-black p-4 text-left text-green-400 shadow-lg sm:max-w-xl"
      >
        <pre
          class="font-mono text-sm md:text-lg">
          <code>{`
> ERROR: Page not found
> SOLUTION: Navigate back
          `}</code>
        </pre>
      </div>
      <div class="mt-20">
        <a
          href="/"
          class="inline-flex items-center gap-2 rounded-md border border-transparent bg-blue-100 px-4 py-2 text-base font-medium hover:opacity-80 dark:bg-neutral-800"
        >
          <Icon name={"mdi:home-outline"} />
          Return to Homepage
          <Icon name={"mdi:arrow-right"} />
        </a>
      </div>
    </div>
  </main>
</Layout>
