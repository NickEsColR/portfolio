---
import Layout from "@/layouts/Layout.astro";

import About from "@/components/sections/About.astro";
import Experience from "@/components/sections/Experience.astro";
import Hero from "@/components/sections/Hero.astro";
import Projects from "@/components/sections/Projects.astro";
import Skills from "@/components/sections/Skills.astro";
import Education from "@/components/sections/Education.astro";
import Section from "@/components/ui/Section.astro";
import { getI18NCV } from "@/i18n";
import Chat from "@/components/chat/Chat.astro";
import ButtonChat from "@/components/chat/ButtonChat.astro";

const { currentLocale = "en" } = Astro;
const { basics, skills, education, SEO_TITLE, section_titles } = getI18NCV({
  currentLocale,
});
const { image, summary, url } = basics;
---

<Layout
  title={`${SEO_TITLE}`}
  description={summary}
  image={image}
  url={url}
  lang={currentLocale}
>
  <main
    class="flex flex-col gap-x-8 px-4 pt-14 md:px-6 lg:max-h-screen lg:flex-row lg:px-0 print:max-w-none print:grid-cols-1 print:gap-6"
  >
    <aside
      class="slide-enter ease-in lg:h-full lg:w-1/3 lg:pl-8 xl:pl-20 print:col-span-1 print:grid print:grid-cols-2 print:gap-2"
    >
      <Hero />
      <About />
      <ButtonChat />
    </aside>
    <div
      class="slide-enter-content lg:flex-1 lg:overflow-y-auto lg:pr-8 xl:pr-20 print:z-10 print:col-span-1 print:mx-0 print:-mt-36 print:grid print:grid-cols-3 print:gap-2"
    >
      <Chat />
      <Experience className="print" />
      <Projects className="print:hidden" />
      <Section className="print" title={section_titles.skills}>
        <Skills skills={skills} />
      </Section>
      {education && <Education className="order-first" />}
    </div>
  </main>
</Layout>

<style is:global>
  .slide-enter-content {
    scrollbar-color: var(--color-button-muted) var(--color-fill);
  }

  @page {
    size: auto;
    margin: 0mm;
  }

  @keyframes slide-enter {
    0% {
      transform: translateY(10px);
      opacity: 0;
    }

    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @media (prefers-reduced-motion: no-preference) {
    .slide-enter,
    .slide-enter-content > *:not(:has(.table-of-contents)) {
      --enter-stage: 0;
      --enter-step: 150ms; /* Reducido de 400ms */
      --enter-initial: 50ms; /* Reducido para comenzar más rápido */
      animation: slide-enter 1s both 1; /* Reducida la duración de 300ms a 250ms */
      animation-delay: calc(
        var(--enter-initial) + var(--enter-stage) * var(--enter-step)
      );
    }

    /* El resto de selectores se mantienen igual */
    .slide-enter-content > *:nth-child(1) {
      --enter-stage: 1 !important;
    }
    .slide-enter-content > *:nth-child(2) {
      --enter-stage: 2 !important;
    }
    .slide-enter-content > *:nth-child(3) {
      --enter-stage: 3 !important;
    }
    .slide-enter-content > *:nth-child(4) {
      --enter-stage: 4 !important;
    }
    .slide-enter-content > *:nth-child(5) {
      --enter-stage: 5 !important;
    }
    .slide-enter-content > *:nth-child(6) {
      --enter-stage: 6 !important;
    }
    .slide-enter-content > *:nth-child(7) {
      --enter-stage: 7 !important;
    }
    .slide-enter-content > *:nth-child(8) {
      --enter-stage: 8 !important;
    }
    .slide-enter-content > *:nth-child(9) {
      --enter-stage: 9 !important;
    }
    .slide-enter-content > *:nth-child(10) {
      --enter-stage: 10 !important;
    }
    .slide-enter-content > *:nth-child(11) {
      --enter-stage: 11 !important;
    }
    .slide-enter-content > *:nth-child(12) {
      --enter-stage: 12 !important;
    }
    .slide-enter-content > *:nth-child(13) {
      --enter-stage: 13 !important;
    }
    .slide-enter-content > *:nth-child(14) {
      --enter-stage: 14 !important;
    }
    .slide-enter-content > *:nth-child(15) {
      --enter-stage: 15 !important;
    }
    .slide-enter-content > *:nth-child(16) {
      --enter-stage: 16 !important;
    }
    .slide-enter-content > *:nth-child(17) {
      --enter-stage: 17 !important;
    }
    .slide-enter-content > *:nth-child(18) {
      --enter-stage: 18 !important;
    }
    .slide-enter-content > *:nth-child(19) {
      --enter-stage: 19 !important;
    }
    .slide-enter-content > *:nth-child(20) {
      --enter-stage: 20 !important;
    }
  }
</style>
